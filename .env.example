# Database Configuration
DATABASE_URL=postgresql://username:password@localhost/book_agent_db
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30

# AI/ML Configuration
GOOGLE_API_KEY=your_gemini_api_key
GEMINI_MODEL_NAME=gemini-2.5-flash  # or another model as needed

# Authentication Configuration
JWT_SECRET_KEY=your_jwt_secret_key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Vector Database Configuration
CHROMADB_PATH=./chroma_data

# Application Configuration
MAX_BOOK_PAGES=700
MAX_CONCURRENT_USERS=600
BOOK_UPLOAD_SIZE_LIMIT=50MB  # Maximum size for book uploads
ALLOWED_BOOK_EXTENSIONS=pdf,docx,epub,txt

# Security Configuration
ENCRYPT_PASSWORD_ALGORITHM=bcrypt
ENFORCE_HTTPS=false  # Set to true in production

# API Configuration
API_RATE_LIMIT=100  # Requests per minute per user
ENABLE_API_LOGGING=true

# Email Configuration (for verification)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=your_email@gmail.com

# External Services
EXTERNAL_API_TIMEOUT=30  # Timeout in seconds